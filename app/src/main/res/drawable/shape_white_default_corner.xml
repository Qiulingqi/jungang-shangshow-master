<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/white" />

            <corners android:radius="@dimen/common_round_corner_radius" />

            <stroke
                android:width="1dp"
                android:color="@color/default_stroke_color" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="@color/white" />

            <corners android:radius="@dimen/common_round_corner_radius" />

            <stroke
                android:width="0dp"
                android:color="@color/white" />
        </shape>
    </item>

</layer-list>