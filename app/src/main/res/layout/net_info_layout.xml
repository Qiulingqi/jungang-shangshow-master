<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
          
    <RelativeLayout
        android:id="@+id/popup_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/VideoFrameRateWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView 
                android:id="@+id/VideoFrameRateNotify" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="视频编码帧率:"
                android:textColor="#00ffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/VideoFrameRateTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="0fps"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
 
        <LinearLayout
            android:id="@+id/VideoBitRateWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/VideoFrameRateWindow"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView 
                android:id="@+id/VideoBitRateNotify" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="视频编码码率:"
                android:textColor="#00ffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/VideoBitRateTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:gravity="left"
                android:text="0kbps"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/AudioBitRateWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/VideoBitRateWindow"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView 
                android:id="@+id/AudioBitRateNotify" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="音频编码码率:"
                android:textColor="#00ffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/AudioBitRateTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="0fps"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
 
        <LinearLayout
            android:id="@+id/TotalRealBitRateWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AudioBitRateWindow"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView 
                android:id="@+id/TotalRealBitRateNotify" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="总的实际发送码率:"
                android:textColor="#00ffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/TotalRealBitRateTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="0fps"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/ResolutionWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TotalRealBitRateWindow"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView 
                android:id="@+id/ResolutionNotify" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="清晰度:"
                android:textColor="#00ffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ResolutionTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="false"
                android:text="流畅"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
