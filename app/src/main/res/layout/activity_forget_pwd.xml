<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:layout_marginTop="@dimen/common_activity_padding_30"
            android:background="@drawable/shape_translucence_corner"
            android:orientation="vertical">

            <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                android:id="@+id/forget_pwd_account_edittext"
                style="@style/ClearEditTextStyle"
                android:hint="手机号"
                android:inputType="number"
                android:maxLength="11" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_activity_padding_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_activity_padding_30"
                android:layout_weight="1"
                android:background="@drawable/shape_translucence_corner"
                android:orientation="vertical">

                <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                    android:id="@+id/forget_pwd_sms_code_edittext"
                    style="@style/ClearEditTextStyle"
                    android:hint="验证码"
                    android:inputType="number"
                    android:maxLength="4" />
            </LinearLayout>


            <com.shangshow.showlive.common.widget.custom.BaseButton
                android:id="@+id/forget_pwd_get_sms_code"
                style="@style/SendSmsCoeStyle"
                android:layout_marginLeft="@dimen/common_activity_padding_10"
                android:layout_marginRight="@dimen/common_activity_padding_30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:layout_marginTop="@dimen/common_activity_padding_10"
            android:background="@drawable/shape_translucence_corner"
            android:orientation="vertical">

            <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                android:id="@+id/input_new_pwd_edittext"
                style="@style/ClearEditTextStyle_singleLine"
                android:inputType="textPassword"
                android:hint="输入新密码" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:layout_marginTop="@dimen/common_activity_padding_10"
            android:background="@drawable/shape_translucence_corner"
            android:orientation="vertical">

            <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                android:id="@+id/input_new_pwd_reconfirm_edittext"
                style="@style/ClearEditTextStyle_singleLine"
                android:inputType="textPassword"
                android:hint="确认新密码" />
        </LinearLayout>


        <com.shangshow.showlive.common.widget.custom.BaseButton
            android:id="@+id/forget_pwd_confrim"
            style="@style/A1ColorBtn_Corner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:layout_marginTop="@dimen/common_activity_padding_16"
            android:text="@string/confirm" />


    </LinearLayout>


</LinearLayout>