<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_activity_padding_1"
        android:background="@color/default_stroke_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/easy_dialog_negative_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <View
            android:id="@+id/easy_dialog_btn_divide_view"
            android:layout_width="@dimen/common_activity_padding_1"
            android:layout_height="match_parent"
            android:background="@color/default_stroke_color" />


        <Button
            android:id="@+id/easy_dialog_positive_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:singleLine="true"
            android:text="@string/ok"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>