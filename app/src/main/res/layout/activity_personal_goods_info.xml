<?xml version="1.0" encoding="utf-8"?>
<com.shangshow.showlive.common.widget.custom.ReboundScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_apgi_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_adimage"/>
          <TextView
              android:id="@+id/tv_apgi_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="@dimen/dp15"
              android:textColor="@color/gray"
              android:textSize="@dimen/text_size_20"/>
        <TextView
            android:id="@+id/tv_apgi_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp15"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_20"/>
        <TextView
            android:id="@+id/tv_apgi_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_10"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp15"
            android:padding="@dimen/common_activity_padding_16"
            android:textSize="@dimen/text_size_16" />

        </LinearLayout>
</com.shangshow.showlive.common.widget.custom.ReboundScrollView>