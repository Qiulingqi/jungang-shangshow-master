<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_activity_padding_30">

            <com.shangshow.showlive.common.widget.custom.CircleImageView
                android:id="@+id/register_info_icon"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/common_activity_padding_5"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_photo" />

        </RelativeLayout>


        <TextView
            style="@style/TextViewGrayText_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/upload_photo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:layout_marginTop="@dimen/common_activity_padding_30"
            android:background="@drawable/shape_translucence_corner"
            android:orientation="vertical">

            <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                android:id="@+id/register_info_nick_name_edittext"
                style="@style/ClearEditTextStyle"
                android:hint="昵称" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:layout_marginTop="@dimen/common_activity_padding_10"
            android:background="@drawable/shape_translucence_corner"
            android:orientation="vertical">

            <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                android:id="@+id/register_info_id_no_edittext"
                style="@style/ClearEditTextStyle"
                android:enabled="false" />
        </LinearLayout>


        <RadioGroup
            android:id="@+id/register_info_sex_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_list_item_height_48"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_activity_padding_16"
            android:paddingRight="@dimen/common_activity_padding_16">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/common_list_item_height_48"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/register_info_sex_male"
                style="@style/TextViewGrayText_16"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_list_item_height_48"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="@dimen/dp02"
                android:drawableLeft="@drawable/select_drawable_selecter"
                android:drawableRight="@mipmap/icon_sex_male"
                android:gravity="center"
                android:text=" " />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/common_list_item_height_48"
                android:layout_weight="2" />

            <RadioButton
                android:id="@+id/register_info_sex_female"
                style="@style/TextViewGrayText_16"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_list_item_height_48"
                android:button="@null"
                android:drawablePadding="@dimen/dp02"
                android:drawableLeft="@drawable/select_drawable_selecter"
                android:drawableRight="@mipmap/icon_sex_female"
                android:gravity="center"
                android:text=" " />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/common_list_item_height_48"
                android:layout_weight="1" />
        </RadioGroup>

        <com.shangshow.showlive.common.widget.custom.BaseButton
            android:id="@+id/register_info_complete"
            style="@style/A1ColorBtn_Corner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:text="@string/complete" />

    </LinearLayout>


</LinearLayout>