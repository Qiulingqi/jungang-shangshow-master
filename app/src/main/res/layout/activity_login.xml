<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.shangshow.showlive.common.utils.CustomVideoView
            android:id="@+id/firstGIfView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--        <TextView
                    style="@style/TextViewSecondThemeText_20"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_list_item_height_120"
                    android:layout_margin="@dimen/common_activity_padding_16"
                    android:gravity="center"
                    android:text="@string/app_name" />-->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/newlog" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:background="@drawable/shape_translucence_corner"
            android:gravity="center"
            android:orientation="vertical">

            <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                android:id="@+id/login_account_edittext"
                style="@style/ClearEditTextStyle"
                android:hint="手机号"
                android:layout_width="200dp"
                android:inputType="number"
                android:maxLength="11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:layout_marginTop="@dimen/common_activity_padding_16"
            android:background="@drawable/shape_translucence_corner"
            android:gravity="center"
            android:orientation="vertical">

            <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                android:id="@+id/login_password_edittext"
                style="@style/ClearEditTextStyle_singleLine"
                android:hint="密码"
                android:layout_width="200dp"
                android:inputType="textPassword" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/login_regesit"
                style="@style/TextViewGrayText_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:textColor="#fff"
                android:onClick="onClick"
                android:text="注册" />

            <TextView
                android:id="@+id/login_forget_password"
                style="@style/TextViewGrayText_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:textColor="#fff"
                android:layout_alignParentRight="true"
                android:onClick="onClick"
                android:text="忘记密码?" />
        </RelativeLayout>

        <com.shangshow.showlive.common.widget.custom.BaseButton
            android:id="@+id/login_btn"
            style="@style/A1ColorBtn_Corner"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:text="@string/login" />
        <TextView
            android:id="@+id/shangshow_fuwuxieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#faec55"
            android:textSize="11dp"
            android:layout_marginTop="10dp"
            android:text="商秀服务协议"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/login_wenxin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:src="@mipmap/icon_weixin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:textSize="11dp"
                android:text="快捷登录"/>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>