<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_activity_padding_5"
            android:background="@drawable/shape_translucence_rightangle"
            android:orientation="vertical">

            <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                android:id="@+id/bindmobile_PhoneNum"
                style="@style/ClearEditTextStyle"
                android:hint="手机号码"
                android:inputType="number"
                android:maxLength="11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_activity_padding_10"
            android:orientation="horizontal">

            <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                android:id="@+id/bindmobile_authcode"
                style="@style/ClearEditTextStyle"
                android:layout_marginRight="@dimen/common_activity_padding_5"
                android:layout_weight="1"
                android:background="@drawable/shape_translucence_rightangle"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="4" />

            <com.shangshow.showlive.common.widget.custom.BaseButton
                android:id="@+id/bindmobile_authcode_button"
                style="@style/SendSmsCoeStyle" />

        </LinearLayout>

    </LinearLayout>

    <com.shangshow.showlive.common.widget.custom.BaseButton
        android:id="@+id/bindmobile_bound_button"
        style="@style/A1ColorBtn_Corner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_list_item_height_48"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/common_activity_padding_16"
        android:text="绑定" />


</RelativeLayout>