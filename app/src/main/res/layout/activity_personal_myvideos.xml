<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_videos_ptr_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.shangshow.showlive.common.widget.custom.LiveVideoTypeLayout
        android:id="@+id/live_video_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_item_color" />

    <com.shangshow.showlive.common.widget.ultra.loadmore.RLPtrFrameLayout
        android:id="@+id/live_video_RLPtrFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/live_video_type_layout"
        android:layout_marginTop="@dimen/common_activity_padding_10" />

    <LinearLayout
        android:id="@+id/ll_myvideos_operater"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:background="#202020"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_myvideos_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/ColorE" />

        <View
            android:layout_width="@dimen/dp0.5"
            android:background="#303030"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_myvideos_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>