<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:layout_marginTop="@dimen/common_activity_padding_30"
            android:background="@drawable/shape_translucence_corner"
            android:orientation="vertical">

            <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                android:id="@+id/address_edit_username"
                style="@style/ClearEditTextStyle"
                android:hint="真实姓名" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:layout_marginTop="@dimen/common_activity_padding_10"
            android:background="@drawable/shape_translucence_corner"
            android:orientation="vertical">

            <com.shangshow.showlive.common.widget.custom.ClearableEditTextWithIcon
                android:id="@+id/address_edit_mobile"
                style="@style/ClearEditTextStyle"
                android:hint="手机号"
                android:inputType="number"
                android:maxLength="11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:layout_marginTop="@dimen/common_activity_padding_10"
            android:background="@drawable/shape_translucence_corner"
            android:orientation="vertical">

            <EditText
                android:id="@+id/address_edit_detail"
                style="@style/ClearEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_list_item_height_120"
                android:hint="收货地址" />

        </LinearLayout>


        <CheckBox
            android:id="@+id/address_edit_isDefault"
            style="@style/TextViewGrayText_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_edit_detail"
            android:layout_marginLeft="@dimen/common_activity_padding_30"
            android:layout_marginRight="@dimen/common_activity_padding_30"
            android:button="@drawable/checkbackground"
            android:text="设为默认收货地址" />

    </LinearLayout>

    <com.shangshow.showlive.common.widget.custom.BaseButton
        android:id="@+id/address_edit_complete_button"
        style="@style/A1ColorBtn_Corner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_list_item_height_48"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/common_activity_padding_16" />


</RelativeLayout>