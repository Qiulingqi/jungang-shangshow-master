<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/setting_contact_us_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_activity_padding_10"
        android:background="@drawable/shape_translucence_rightangle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#fff"
            android:text="电话"/>
        <com.shangshow.showlive.common.widget.custom.BaseButton
            android:id="@+id/contact_us_btn"
            style="@style/ClearEditTextStyle"
            android:text="021-222222"
            android:textSize="14dp"
            android:textColor="@color/color_yellow_FAEC55"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_activity_padding_30"
        android:layout_marginRight="@dimen/common_activity_padding_30"
        android:text="24小时全国客服电话"
        android:textColor="@color/gray"
        android:layout_below="@+id/setting_contact_us_layout"
        android:gravity="right"/>

</RelativeLayout>