<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.shaojun.widget.tablayout.SlidingTabLayout
        android:id="@+id/my_friends_slidingTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_list_item_height_48"
        android:background="@color/layout_item_color"
        tl:tl_divider_color="@color/default_stroke_color"
        tl:tl_divider_padding="0dp"
        tl:tl_divider_width="1dp"
        tl:tl_indicator_color="@color/a1_color"
        tl:tl_indicator_height="1.5dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_padding="20dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/a1_color"
        tl:tl_textUnselectColor="@color/gray"
        tl:tl_underline_color="@color/default_stroke_color"
        tl:tl_underline_height="1dp" />

    <com.shangshow.showlive.common.widget.viewpager.CustomViewPager
        android:id="@+id/my_friends_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_friends_slidingTabLayout"
        android:layout_gravity="center"
        android:persistentDrawingCache="animation" />
</RelativeLayout>