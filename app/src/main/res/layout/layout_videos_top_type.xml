<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logic_livevideo_type_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_list_item_height_48"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/videos_type_list_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/videos_type_list"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_list_item_height_40"
            android:background="@color/transparent"
            android:gravity="center"
            android:src="@drawable/selector_videolist_type_list" />

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/default_stroke_color" />

    <LinearLayout
        android:id="@+id/videos_type_grid_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/videos_type_grid"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_list_item_height_40"
            android:background="@color/transparent"
            android:gravity="center"
            android:src="@drawable/selector_videolist_type_grid" />

    </LinearLayout>


</LinearLayout>

